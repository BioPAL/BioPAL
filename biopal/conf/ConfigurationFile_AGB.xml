<ConfigurationL2AGB version="1.0">
	<GroundCancellation>
		<MultiMaster>True</MultiMaster><!--default True-->
		<EnhancedForestHeight unit="m">50</EnhancedForestHeight>
		<ModelBasedEqualization always_off="1" always_on="2" on_if_two_acquisitions="3">1</ModelBasedEqualization>
	</GroundCancellation>
	<EstimateAGB>
		<forest_class_observable_name>forest_class</forest_class_observable_name>
		<transfer_function_name>none</transfer_function_name>
		<number_of_tests>5</number_of_tests>
		<fraction_of_roi_per_test>0.5</fraction_of_roi_per_test>
		<fraction_of_cal_per_test>0.5</fraction_of_cal_per_test>
		<add_variability_on_cal_data >False</add_variability_on_cal_data >
		<intermediate_ground_averaging>100</intermediate_ground_averaging> <!-- intermediate_ground_averaging<=product_resolution/2 >-->
		<product_resolution unit="m">200</product_resolution><!--(roi) sampling area size-->
		<distance_sampling_area unit="m">300</distance_sampling_area><!--distance roi-->
		<parameter_block_size unit="m">7500</parameter_block_size>
		<distance_parameter_block unit="m">5250</distance_parameter_block>
		<min_number_of_rois>2</min_number_of_rois>
		<min_number_of_rois_per_stack>0</min_number_of_rois_per_stack>
		<min_number_of_cals_per_test>2</min_number_of_cals_per_test>
		<min_number_of_rois_per_test>1</min_number_of_rois_per_test>
		<EstimationValidValuesLimits>
			<min unit="t/ha">1</min>
			<max unit="t/ha">1000</max>
		</EstimationValidValuesLimits>
	</EstimateAGB>
	<EnableResampling>False</EnableResampling>
	<ComputeGeometry>False</ComputeGeometry>
	<ApplyCalibrationScreen>False</ApplyCalibrationScreen>
	<DEMflattening>False</DEMflattening>
	<MultilookHeadingCorrection>True</MultilookHeadingCorrection>
	<SaveBreakpoints>True</SaveBreakpoints>
	<DeleteTemporaryFiles>False</DeleteTemporaryFiles>
</ConfigurationL2AGB>
